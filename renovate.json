{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":semanticCommits",
    ":disableRateLimiting"
  ],
  "ignorePaths": ["**kubernetes/archive/**"],
    "flux": {
      "fileMatch": ["kubernetes/.+\\.yaml$"]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$"
    ]
  }
}
