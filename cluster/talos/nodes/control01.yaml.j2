---
machine:
  install:
    diskSelector:
      model: Patriot M.2 P320 256GB
  nodeLabels:
    node.kubernetes.io/gpu: "true"
  type: controlplane
---
apiVersion: v1alpha1
kind: UserVolumeConfig
name: local-hostpath
provisioning:
  minSize: 1TB
  grow: true
  diskSelector:
    match: disk.dev_path == "/dev/nvme0n1" && !system_disk # TODO: use model instead of dev_path
---
apiVersion: v1alpha1
kind: HostnameConfig
hostname: control01
---
apiVersion: v1alpha1
kind: LinkAliasConfig
name: net0
selector:
    match: link.driver == "igc" && mac(link.permanent_addr).startsWith("58:47:ca:7a:")
