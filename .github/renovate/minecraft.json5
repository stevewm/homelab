
{ // I hate Renovate config so much, my god
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  customManagers: [
    {
      customType: "regex",
      fileMatch: ["^helmrelease/.*\\.yaml$"],
      datasourceTemplate: "custom.minecraft",
      matchStrings: [ // Note to self: escaping the backslash is required
        '# renovate: depName=(?<depName>.*?)?\\s*.*?VERSION:\\s*(?<currentValue>.*)'
      ]
    }
  ],
  customDatasources: {
    "minecraft": {
      defaultRegistryUrlTemplate: "https://piston-meta.mojang.com/mc/game/version_manifest_v2.json",
      format: "json",
      transformTemplates: ['{"releases": [ { "version": $.latest.release } ]}']
    }
  },
   packageRules: [
    {
      matchPackageNames: ["minecraft"],
      ignoreUnstable: false
    }
  ]
}
