{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "platformAutomerge": false,
  "autoMergeType": "branch",
  "packageRules": [
    {
      "description": "Automerge digest updates",
      "matchPackagePatterns": [
        "ghcr.io/onedr0p"
      ],
      "matchUpdateTypes": [
        "digest"
      ],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "description": "Automerge trusted sources",
      "matchPackagePatterns": [
        "ghcr.io/stevewm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "ignoreTests": true
    }
  ]
}
