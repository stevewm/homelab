{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "kubernetes cluster",
      matchFileNames: ["**/cluster/**"],
      additionalBranchPrefix: "cluster-",
    },
    {
      description: "NAS",
      matchFileNames: ["**/nas/**"],
      additionalBranchPrefix: "nas-",
    },
    {
      description: "VPS",
      matchFileNames: ["**/vps/**"],
      additionalBranchPrefix: "vps-",
    },
  ],
}
