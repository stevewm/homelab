{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Main cluster",
      "matchFileNames": [
        "**/kubernetes/mini/**"
      ],
      "additionalBranchPrefix": "main-",
    },
    {
      "description": "Pi cluster",
      "matchFileNames": [
        "**/kubernetes/pi/**"
      ],
      "additionalBranchPrefix": "pi-"
    },
    {
      "description": "Docs",
      "matchFileNames": [
        "**/docs/**"
      ],
      "additionalBranchPrefix": "docs-"
    }
  ]
}
