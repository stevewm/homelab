{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    ":semanticCommits",
    ":disableRateLimiting",
    "github>stevewm/homelab//.github/renovate/automerge.json5",
    "github>stevewm/homelab//.github/renovate/clusters.json5",
    "github>stevewm/homelab//.github/renovate/commit-messages.json5",
    "github>stevewm/homelab//.github/renovate/grafana-dashboards.json5",
    "github>stevewm/homelab//.github/renovate/groups.json5"
  ],
  ignorePaths: [
    "**kubernetes/.archive/**"
  ],
  flux: {
    fileMatch: [
      "kubernetes/.+\\.yaml$"
    ]
  },
  helm-values: {
    fileMatch: [
      "(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$"
    ]
  },
  kubernetes: {
    fileMatch: [
      "(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$"
    ]
  }
}
